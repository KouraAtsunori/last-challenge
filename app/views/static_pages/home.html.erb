<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <%# Follower Followed　のカウント表示%>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="posting_form">
        <%= render 'shared/posting_form' %>
      </section>
      <h3>投稿一覧</h3>
      <%= render 'shared/feed' %>
    </aside>
    <div class="col-md-8">

      <section>
        <%= form_tag(controller:'static_pages', action:'get_road_station') do  %>
        <%= collection_select(:area, :region_id, @areas, :id, :area) %>
        <%= hidden_field(:user, :id) %>
        <%= submit_tag("決定") %>
        <% end %>

        <%# ここに地域のコンボボックス選択を入れたい　%>
        <%#= render 'areas/new' %>
        
        <%= render 'list' %>
      </section>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>道の駅情報コミュニティー</h1>
    
    <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>


